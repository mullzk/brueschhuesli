<!DOCTYPE html PUBLIC "-//W3C/DTD HTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
	<title><%= @page_title || "Brüschhüsli-Reservierungen"%></title>
	<link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
	<meta name="viewport" content="width=device-width, initial-scale=0.75" />

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>
<body id="emmental-app">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<% if flash[:notice] -%>
					<div id="notice">
						<%= flash[:notice] %>
					</div>
				<% end -%>
				<%= yield :layout %>
			</div>
			<nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
				<a class="navbar-brand" href="/"><%= @page_title || "Brüschhüsli-Reservierungen" %></a>
  				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav mr-auto" >
						<% if session[:user_id] -%>
							<li><%= link_to "Reservationen", {:controller => "reservations", :action => "index"}, :class => "nav-link"  %></li>
							<li><%= link_to "Benutzer", :controller => "login", :action => "list_users" %></li>
							<li><%= link_to "Abrechnung", :controller => "abrechnung", :action => "jahresstatistik"%></li>
							<br />
							<li><%= link_to "Reservations- und Entschädigungsregelung", "/reservationsregelung.pdf" %></li>	
		 					<li><%= link_to "Hausordnung",  "/hausordnung.pdf" %></li> 										
						<% end -%>
						<br />
						<% unless session[:user_id] -%>
						<% else  -%>
							<li><%= link_to "Passwort ändern", :controller => "login", :action => "change_password"%></li>
							<li><%= link_to "Logout", :controller => "login", :action => "logout" %></li>
						<% end -%>					
					</ul>
				</div>
			
			</nav>
		</div>
	</div>
</body>